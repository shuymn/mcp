{
  "tasks": {
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check --config deno.json",
    "lint": "deno lint"
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "exclude": [
      ".vscode/**",
      ".claude/**",
      "**/*.md"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    },
    "exclude": [
      ".vscode/**",
      ".claude/**",
      "**/*.md"
    ]
  },
  "imports": {
    "@ai-sdk/anthropic": "npm:@ai-sdk/anthropic@1.2.12",
    "@ai-sdk/google": "npm:@ai-sdk/google@^1.2.19",
    "@ai-sdk/openai": "npm:@ai-sdk/openai@^1.3.22",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.13.2",
    "ai": "npm:ai@4.3.16",
    "zod": "npm:zod@^3.25.67",
    "zod-to-json-schema": "npm:zod-to-json-schema@^3.24.6"
  }
}
